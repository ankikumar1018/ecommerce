{
  "info": {
    "name": "ShopSphere API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "url": {"raw":"{{base_url}}/api/auth/register/","host":["{{base_url}}"],"path":["api","auth","register",""]},
        "body": {"mode":"raw","raw":"{\n  \"username\": \"alice\",\n  \"email\": \"alice@example.com\",\n  \"password\": \"pass\"\n}"}
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "url": {"raw":"{{base_url}}/api/auth/login/","host":["{{base_url}}"],"path":["api","auth","login",""]},
        "body": {"mode":"raw","raw":"{\n  \"username\": \"alice\",\n  \"password\": \"pass\"\n}"}
      }
    },
    {
      "name": "Products",
      "request": {
        "method": "GET",
        "header": [],
        "url": {"raw":"{{base_url}}/api/products/","host":["{{base_url}}"],"path":["api","products",""]}
      }
    },
    {
      "name": "Add to Cart",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"},{"key":"Authorization","value":"Bearer {{access_token}}"}],
        "url": {"raw":"{{base_url}}/api/cart/add/","host":["{{base_url}}"],"path":["api","cart","add",""]},
        "body": {"mode":"raw","raw":"{\n  \"variant_id\": 1,\n  \"quantity\": 2\n}"}
      }
    },
    {
      "name": "Get Cart",
      "request": {
        "method": "GET",
        "header": [{"key":"Authorization","value":"Bearer {{access_token}}"}],
        "url": {"raw":"{{base_url}}/api/cart/","host":["{{base_url}}"],"path":["api","cart",""]}
      }
    },
    {
      "name": "Checkout",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"},{"key":"Authorization","value":"Bearer {{access_token}}"}],
        "url": {"raw":"{{base_url}}/api/checkout/","host":["{{base_url}}"],"path":["api","checkout",""]},
        "body": {"mode":"raw","raw":"{\n  \"address\": \"123 Main St\"\n}"}
      }
    },
    {
      "name": "Webhook (simulate)",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"},{"key":"X-Signature","value":"{{webhook_signature}}"}],
        "url": {"raw":"{{base_url}}/api/webhook/","host":["{{base_url}}"],"path":["api","webhook",""]},
        "body": {"mode":"raw","raw":"{\n  \"event\": \"order.created\",\n  \"data\": { \"order_id\": 1 }\n}"}
      }
    }
  ]
}
